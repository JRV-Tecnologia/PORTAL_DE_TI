@model PORTAL_DE_TI.Models.NewsDB;
@{
    Layout = "_LayoutPortalDeTI";
}



<script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
<script defer src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.2/summernote.js"></script>

<h1>
    News - Edit
</h1>
<div>
    <form method="post" action="/news/edit" enctype="multipart/form-data">
        @Html.Hidden("id",Model.Id)
        <div class="mb-3">
            <label for="tituloInput" class="form-label">Título</label>
            <input type="text" name="Nome" class="form-control" id="tituloInput" placeholder="Título" value="@Model.Nome">
        </div>
        <div class="mb-3">
            @*Texto*@
            <label for="resenhaInput" class="form-label">Resenha</label>
            <textarea class="summernote" id="resenhaInput" name="Resenha">@Model.Resenha</textarea>
        </div>
        <div class="mb-3">
            @*Imagem*@
            <label for="imageInpunt" class="form-label">Imagem</label>
            <input class="form-control" name="CaminhoImg" type="file" id="imageInpunt" accept="image/*">
        </div>
        <div class="mb-3">
            @*Texto*@
            <label for="textoInpunt" class="form-label">Texto</label>
            <textarea class="summernote" name="Texto" id="textoInput">@Model.Texto</textarea>
            <div style=" justify-content:flex-end; ">
                <button type="button" id="createNews_Cancel" class="btn btn-secondary" style="margin-right:1rem">Cancelar</button>
                <button type="submit" id="createNews_Save" class="btn btn-primary">Salvar</button>
            </div>
        </div>
    </form>
</div>

<script>
    $(document).ready(function () {
        $('.summernote').summernote();
    });
</script>
<script src="lang/summernote-pt-BR.js"></script>

@section Scripts {
    <script src="~/js/Views/News/Create.js"></script>

}